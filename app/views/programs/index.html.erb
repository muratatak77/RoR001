<b>Programlar</b>
<p>

<table border="1" style="width:100%">
		<thead>
			<tr>
				<th>ID</th>
				<th>Title</th>
				<th>Aciklama</th>
				<th>Sure</th>
				<th>Resim</th>
				<th>Bolumler</th>
			</tr>
		</thead>
	<tbody>

	<% @programs.each do |prg| %>
		<tr>
			<td><%= prg.instance_variable_get(:@id) %> </td>
			<td><%= prg.instance_variable_get(:@title) %> </td>
			<td><%= prg.instance_variable_get(:@description)[0..200] %>... </td>
			<td><%= prg.instance_variable_get(:@duration) %></td>
			<td style="text-align:center;"><img style="width:50%" src="<%= prg.instance_variable_get(:@thumb) %>" /></td>
			<td><a href="/programlar/<%= prg.instance_variable_get(:@id) %>" > Bolumler</a> </td>
		</tr>
	<% end %>

	</tbody>

</table>
